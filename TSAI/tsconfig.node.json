{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2023"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    // "allowImportingTsExtensions": true, // <--- REMOVE THIS LINE ENTIRELY!
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": false, // <--- SET THIS BACK TO TRUE!

    "composite": true, // Keep this, it was needed for the reference
    "types": ["node"],

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["vite.config.ts"]
}